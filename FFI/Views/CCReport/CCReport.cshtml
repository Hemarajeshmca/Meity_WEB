                selectable: true,
                navigatable: true,
                columns: [{
                    command: [
            {
                name: "print",
                id: "print",
                imageClass: "fa fa-print",

            },
                    ], title: "Action", width: "25px",
                }, {


                    field: "report_ref_no",
