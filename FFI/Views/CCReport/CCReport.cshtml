    function gridFilter(data) {
        try {
            $("#grid_Drop_list").kendoGrid({
                dataSource: {
                    data: data,
                    schema: {
                        model: {
                            fields: {

                                report_ref_no: { type: "string" },
                                report_nmae: { type: "string" },
                                from_date: { type: "string" },
                                to_date: { type: "string" },
