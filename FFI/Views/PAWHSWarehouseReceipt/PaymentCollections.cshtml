                       width: 80,
                   },
                    {
                        field: "payment_mode_desc",
                        title: "Payment Mode Desc",
                        width: 80,
                    },
                    {
                        field: "ref_no",
                        title: "Reference No",
                        width: 80
                    },

                  {
                      field: "payment_mode",
                      title: "Payment Mode",
                      width: 80,
                      hidden: true
                  },

                  {
                      field: "payment_date",
                      title: "Payment Date",
                      width: 80,
                  },
                   {
                       field: "paid_amount",
                       title: "Paid Amount",
                       width: 80
                   },
                 {
                     field: "payment_type",
                     title: "Payment Type",
                     hidden: true,
                     width: 100

                 },
                 {
                     field: "payment_type_desc",
                     title: "Payment Type Desc",
                     hidden: true,
                     width: 100

                 },
                  {
                      field: "payment_no",
                      title: "Payment No",
                      hidden: true,
                      width: 80

                  },

                  {
                      field: "balance_amount",
                      title: "Balance Amount",
                      width: 100,
                      hidden: true

                  },



                  {
                      field: "process_status",
