<script>
    var menuId = "";
    var permission = "";
    $(document).ready(function () {
        debugger;
        Form_validate_Name = $('form.form-horizontal').attr('id');
        var container = $("#Tax_REMrprt");
        kendo.init(container);
        container.kendoValidator({
        });
        $("#Topsubheader").show();
        $("#bottomFooter").show();
        $("#bottom_menus").hide();
        $("#btndiv").show();
        $("#frmlayerdiv").hide();
        $("#divCreate").hide();
        $("#divEdit").hide();
        $("#divView").show();
        $("#DocStat").show();
        $(".edtviw_item").show();
        $(".create_item").hide();
      

        $("#txt_fromdate").kendoDatePicker({
            start: "year",
            depth: "year",
            format: "MMMM yyyy",
            dateInput: true
        });
        var combo_month = "";
        $("#cmb_month").empty();
        Screen_Id = "Tax";
        permission = sec_Permission(Screen_Id);
        var org_id = getlocalStorage('org_id');
        $('#txt_orgcode').val(org_id);
        load_master_code();
        listgrid([]);
        $("#btnExport").kendoButton({
            click: function () {
                debugger;
                var gd = $("#tax_REMgrid").data("kendoGrid");
                var len = gd.dataSource._data.length;
                if (len != 0) {
                    $("#tax_REMgrid").data("kendoGrid").saveAsExcel();
                    kendoAlert("Exported Succesfully");
                }
                else if (len == 0) {
                    kendoAlert("Sorry, no data found in the grid to Export");
                }

            }
        });
    });
    $(function () {
        $('#refresh').click(function () {


            if ($('#txt_fromdate').val() != "") {

                debugger;
                var from_Date1 = $("#txt_fromdate").val();
                var parts = from_Date1.split('/');
                var from_date = parts[0];
                var org_id = getlocalStorage('org_id');

                var formval = form_Serialize("Tax_REMrprt");
                var obj_val = JSON.parse(formval);
                var data = {};
                data.context = WebAPIProxy.getContext();
                data.context.Header = obj_val;

                $.ajax({
                    type: "POST",
                    data: '{In_month: "' + from_date + '",orgnId:"' + data.context.orgnId + '",locnId:"' + data.context.locnId +
                        '",localeId:"' + data.context.localeId + '",userId:"' + data.context.userId + '"}',
                    url: "/REM/REMTaxReport",
                    dataType: "json",
                    contentType: 'application/json; charset=utf-8',
                    success: function (response) {
                        console.log(response.context)
                        var Res = JSON.parse(response);
                        if (Res.context != null) {
                            console.log(Res);
                            // kendoAlert("Saved Succedfully");
                            debugger;
                            listgrid(Res.context.Output)
                        }

                    },
                    error: function (er) {
                        alert(er)
                        console.log(er)
                    }
                });

                //$.ajax({
                //    type: "POST",
                //    data: '{fromdate:"' + from_date + '",orgid:"' + org_id + '"}',
                //    url: "/REM/TAXREMReport",
                //    dataType: "json",
                //    contentType: 'application/json; charset=utf-8',
                //    success: function (response) {
                //        console.log(response)
                //        listgrid(response);
                //    },
                //    error: function (er) {
                //        alert(er)
                //        console.log(er)
                //    }

                //});
            }
            else
            {
                if ($('#txt_fromdate').val() == "")
                {
                    kendoAlert('Please Select Month');
                }
                return false;
            }
        });
    });

 function listclear() {
     try {
        
            $("#txt_fromdate").data("kendoDatePicker").value("");
            listgrid([]);
        }
        catch (err) {
            javascript_log4j_root(arguments.callee.name, err);
        }
    }
    function load_master_code() {
        try {
            var data = {};
            data.screen_Id = "Tax";
            var tab_values = ajaxcall_param("/Home/screenId_mastercodelist", JSON.stringify(data));
        }
        catch (err) {
            javascript_log4j_root(arguments.callee.name, err);
        }
    }

</script>
