<script>
    function listpageloadfetch() {
        try{
            var formval = form_Serialize("frm_cc_map");
            var obj_val = JSON.parse(formval);
            obj_val.FilterBy_Option = "CC";
            obj_val.FilterBy_Code = "AGG_LOC_CC";
