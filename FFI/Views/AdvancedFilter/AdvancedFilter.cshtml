    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 id="advhdr" class="modal-title"></h4>
    </div>			<!-- /modal-header -->
    <div class="modal-body" style="height:300px; overflow-y:auto;">
        <div id="filter">
            <div id="gridFilter">
