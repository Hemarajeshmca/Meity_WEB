    $(document).ready(function () {
        $("#btn_Edit").hide();       
        $(".adv_filter").attr("hdrtitle", "");
        $(".adv_filter").attr("fltid", "");
        $(".Export").attr("hdrtitle", "Milk Receipts List");


    });
</script>